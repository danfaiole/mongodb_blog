<p id="notice"><%= notice %></p>

<div class="container">

        <div class="row">

            <!-- Blog Post Content Column -->
            <div class="col-lg-12">

                <!-- Blog Post -->

                <!-- Title -->
                <h1><%= @post.title %></h1>
                <p><%= link_to "<i class='glyphicon glyphicon-edit'></i>Editar".html_safe, edit_post_path(@post) %><p>
                <!-- Date/Time -->
                <p>
                  <%= timestamps_posts_helper(@post) %>
                </p>


                <hr>
                <!-- Post Content -->
                <p><%= @post.content %></p>
                <hr>

                <!-- Blog Comments -->

                <!-- Comments Form -->
                <div class="well">
                    <h4>Deixe seu coment치rio!</h4>
                    <%= form_for @post do |form| %>
                      <%= form.fields_for @post.comments.new do |comment_form| %>

                        <%= label_tag 'Seu nome' %>
                        <%= comment_form.text_field :user_name %>

                        <%= label_tag 'Coment치rio' %>
                        <%= comment_form.text_area :content %>

                        <%= comment_form.submit(class: "btn btn-primary") %>
                      <% end %>
                    <% end %>
                </div>

                <hr>

                <!-- Posted Comments -->
                <% @post.comments.each do |comment| %>
                  <div class="media">
                      <div class="media-body">
                          <h4 class="media-heading"><%= comment.user_name %>
                              <small><%= comment.criado_em %> - <%= comment.updated_at == comment.created_at ? '' : comment.editado_em%></small>
                              <small><%#= link_to('Editar', edit_comment_path(comment))%> -
                              <%#= link_to "Apagar coment치rio", comment, method: :delete, data: { confirm: 'Tem certeza que deseja apagar o coment치rio?' } %></small>
                          </h4>
                          <%= comment.content %>
                      </div>
                  </div>
                <% end %>

                </div>

            </div>
        </div>

    </div>
